{
  "name": "pwa-text-editor",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:dev": "concurrently \"cd server && npm run server\" \"cd client && npm run dev\"",
    "start": "npm run build && cd server && node server.js",
    "server": "cd server nodemon server.js --ignore client",
    "build": "cd client && npm run build",
    "install": "concurrently \"cd client && npm install\" \"cd server && npm install\" ",
    "client": "cd client && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcoliveros1202/PWA-text-editor.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mcoliveros1202/PWA-text-editor/issues"
  },
  "homepage": "https://github.com/mcoliveros1202/PWA-text-editor#readme",

  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "workbox": "^0.0.0"
  },

  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.19"
  },

  "heroku-prebuild": "npm install --dev"
}